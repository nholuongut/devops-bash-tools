#  vim:ts=4:sts=4:sw=4:et
#

# no bell sounds
#set bell-style none
set bell-style visible

# tab completion on first press
set show-all-if-ambiguous on
set show-all-if-unmodified on

# tab-complete case insensitive is useful sometimes but other times it's easier to differentiate by case early on
#
# eg. Dockerfile vs docker-compose.yml
#
# changing tab complete behaviour to case insensitive is also counter-intuitive to long time unix users like me,
# even on Mac's case preserving but insensitive APFS filesystem
#
#set completion-ignore-case on
set completion-ignore-case off # default

set visible-stats on
